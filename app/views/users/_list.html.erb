    <div class="picture">
      <%= image_tag("people/faces/girl.png") %>
    </div>      
    <div class="name">Add Child</div>                              
  </li>
  <li class="user item unused" data-id="future_child">
    <div class="picture">
      <%= image_tag("people/faces/baby.png") %>
