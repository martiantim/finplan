  <% list.each do |u|  %>
    <li class="user item" data-id="<%=u.id%>">
      <div class="picture">
        <%= image_tag("people/faces/#{u.family_role}.png") %>
      </div>      
      <div class="name"><%= u.name %></div>
    </li>
  <% end %>

  <% if list.adults.length < 2 %>
    <li class="user item unused" data-id="spouse">
      <div class="picture">
        FACE              
      </div>      
      <div class="name">Add Spouse</div>                              
    </li>
  <% end %>
