<div class="manipulator well notitle clearfix">
  <div class="left-main">
    <%= form_for(@manipulator, :url => "/expenses/#{@manipulator.id}", :html => {'data-remote' => "true"}) do |f| %>
      <%= f.hidden_field :manipulator_template_id %>
      <%= f.hidden_field :plan_id %>
      <div class="line">
        <label>Name</label>
        <%= f.text_field :name, :size => 20 %>
      </div>

      <div class="goal_status"></div>

      <%= render :partial => '/manipulators/params_form', :locals => {:template => @manipulator.manipulator_template, :manipulator => @manipulator} %>

    <% end %>
  </div>
  <div class="right-main">
    <div class="right-controls">
      <button class="remove btn btn-danger">Remove Expense</button>
    </div>
  </div>
</div>