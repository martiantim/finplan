<div id="account">
  <%= image_tag("people/faces/#{@current_user.role}.png") %>
  <%= @current_user.name %>
  <%= link_to "Logout", "/users/logout" %>
</div>

<div id="logo"><%= image_tag("logo.png") %></div>

<div id="navigation" ng-controller="NavController">
  <ul class="nav nav-tabs">
    <li ng-class="{active: controller=='GoalsController'}">
      <%= link_to 'Goals', '#/goals', :class => "nav2" %>
    </li>

    <li ng-class="{active: controller=='FamilyController' || controller=='AccountsController' || controller=='ExpensesController'}">
      <%= link_to 'Setup', '#/setup', :class => "nav2" %>
    </li>

    <li ng-class="{active: controller=='ResultsGoalsController', disabled: controller!='ResultsGoalsController'}">
      <%= link_to 'Results', '#/results', :class => "nav2" %>
    </li>

    <li>
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        Simulate<span style="display:none">*</span> <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li class="simulate" role="presentation" data-section="results">
          <a ng-click="simulate()" role="menuitem" tabindex="-1" href="#">Run Simulation</a>
        </li>
        <li class="scenario" role="presentation" data-section="results">
          <a role="menuitem" tabindex="-1" href="#">Scenarios</a>
        </li>
      </ul>
    </li>
  </ul>
</div>
<ul id="subnav" class="nav nav-pills" ng-show="controller=='FamilyController' || controller=='AccountsController' || controller=='ExpensesController'">
  <li>
    <%= link_to 'Family', '#/family', :"data-content" => 'plan_users' %>
  </li>
  <li>
    <%= link_to 'Accounts', '#/accounts', :"data-content" => 'accounts' %>
  </li>
  <li>
    <%= link_to 'Expenses', '#/expenses', :"data-content" => 'expenses' %>
  </li>
</ul>

<ul id="subnav" class="nav nav-pills" ng-show="controller=='ResultsGoalsController'">
  <li>
    <%= link_to 'Summary', '#/results/goals', :"data-content" => 'goals' %>
  </li>
  <li>
    <%= link_to 'Accounts', '#/results/accounts', :"data-content" => 'graph' %>
  </li>
  <li>
    <%= link_to 'By Year', '#/results/yearly', :"data-content" => 'byyear' %>
  </li>
</ul>