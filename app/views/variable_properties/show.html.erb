<%= form_for(@vprop, :html => {}) do |f| %>
  <%= errors_for(@vprop, "Opps, unable to save template").html_safe %>

<div>Name: <%= @vprop.name%></div>

<div>Type: <%= f.select "var_type", options_for_select(VariableProperty::VAR_TYPES, @vprop.var_type) %>

<div>Depends On: <%= f.text_field :depends_on %></div>

<div>Default: <%= f.text_field :default %></div>

<div>Options: <%= f.text_field :options %></div>

<div>Description: <%= f.text_area :description %></div>

  <%= f.submit "Save" %>
<% end %>